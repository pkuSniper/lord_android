<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/biz_plugin_weather_shenzhen_bg">

    <com.example.lzb.lesshstsecondapp.MyRefresh.MyRefreshView
        android:id="@+id/refreshable_view"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        >

        <!---->
        <ScrollView
            android:id="@+id/pre_view"
            android:layout_width="fill_parent"
            android:layout_height="640dp"
            android:layout_below="@+id/title"
            android:background="@drawable/biz_plugin_weather_shenzhen_bg"
            android:orientation="vertical"
            android:scrollbarStyle="insideInset">


            <!--此处放置今日天气信息-->
            <RelativeLayout
                android:id="@+id/weather_today"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="0dp">
                <LinearLayout
                    android:id="@+id/title_info"
                    android:layout_width="fill_parent"
                    android:layout_height="60dp"
                    android:orientation="horizontal">
                    <Button
                        android:id="@+id/btn_change_city"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_alignParentLeft="true"
                        android:onClick="OnClickOtherActivity"
                        android:background="@drawable/base_action_bar_action_city"
                        android:textColor="@android:color/white"/>
                    <LinearLayout
                        android:layout_width="300dp"
                        android:layout_height="60dp"
                        android:layout_centerInParent="true">
                        <TextView
                            android:id="@+id/city_name"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:text="北京"
                            android:textSize="30dp"
                            android:gravity="center"
                            android:textColor="@android:color/white"/>
                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/main_info"
                    android:layout_width="fill_parent"
                    android:layout_height="300dp"
                    android:layout_below="@+id/title_info">
                    <TextView
                        android:id="@+id/temperature"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="16℃"
                        android:textSize="50sp"
                        android:gravity="center"
                        android:textColor="@android:color/white"/>
                </LinearLayout>
                <!--此处放置今日天气信息-->
                <include
                    android:id="@+id/weather_current"
                    layout="@layout/weather_cur"
                    />
                <!--此处放置PM2.5信息-->
                <include
                    android:id="@+id/weatehr_pm25"
                    layout="@layout/weather_pm25" />
                <!--此处放置今日概况信息-->
                <include
                    android:id="@+id/weatehr_general_situation"
                    layout="@layout/weather_general_situation"/>

                <TextView android:id="@+id/cityName"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_below="@+id/weatehr_general_situation"
                    android:scrollbars="vertical"
                    android:textColor="@android:color/white"/>


            </RelativeLayout>
            <!--此处放置七日天气信息-->
            <!--此处放置其他信息-->
        </ScrollView >
    </com.example.lzb.lesshstsecondapp.MyRefresh.MyRefreshView>

