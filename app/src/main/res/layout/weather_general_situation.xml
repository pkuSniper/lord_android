<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:layout_below="@+id/weather_current"
    android:layout_centerInParent="true"
    android:layout_marginTop="5dp"
    android:background="@android:color/transparent">
    <!--天气图例-->
    <ImageView
        android:id="@+id/weather_img"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/biz_plugin_weather_qing"/>
    <!--今日星期-->
    <TextView
        android:id="@+id/today_week"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/weather_img"
        android:textColor="@android:color/white"
        android:text="今天星期三"
        android:textSize="20sp"/>
    <!--今日温度-->
    <TextView
        android:id="@+id/temperature1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/today_week"
        android:layout_toRightOf="@+id/weather_img"
        android:textColor="@android:color/white"
        android:text="-2℃~7℃"
        android:singleLine="true"
        android:textSize="20sp"/>
    <!--天气状况-->
    <TextView
        android:id="@+id/climate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/temperature1"
        android:layout_toRightOf="@+id/weather_img"
        android:textColor="@android:color/white"
        android:text="多云转晴"
        android:singleLine="true"
        android:textSize="20sp"/>
    <!--风力情况-->
    <TextView
        android:id="@+id/wind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/climate"
        android:layout_toRightOf="@+id/weather_img"
        android:textColor="@android:color/white"
        android:text="微风"
        android:singleLine="true"
        android:textSize="20sp"/>
</RelativeLayout>
